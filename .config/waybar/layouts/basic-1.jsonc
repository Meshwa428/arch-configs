{
  "layer": "top",
  "output": ["*"],
  "position": "top",
  "exclusive": true,
  "passthrough": false,
  "reload_style_on_change": true,
  "include": [
    // "$XDG_CONFIG_HOME/waybar/modules/*json*",
    // "$XDG_DATA_HOME/waybar/modules/*json*"
    "$XDG_CONFIG_HOME/waybar/includes/includes.json"
  ],
  // ? Groups per side
  "modules-left": ["group/leaf-inverse"],
  "modules-center": ["group/pill#1", "group/pill-in#center", "group/pill#2"],
  "modules-right": ["group/leaf"],
  // ? Declaring the groups
  "group/pill#1": {
    "orientation": "inherit",
    "modules": ["custom/hyprsunset", "idle_inhibitor"]
  },
  "group/pill#2": {
    "orientation": "inherit",
    "modules": [
      "custom/keybindhint",
      "custom/gamemode"
    ]
  },
  "group/leaf-inverse": {
    "orientation": "inherit",
    "modules": ["hyprland/workspaces", "hyprland/window"]
  },
  "group/pill-in#center": {
    "orientation": "inherit",
    "modules": [
      "custom/spotify",
      "keyboard-state",
      "clock",
      "custom/updates",
    ]
  },
  "group/leaf": {
    "orientation": "inherit",
    "modules": [
      "privacy",
      "tray",
      "backlight",
      "custom/bluetooth",
      "pulseaudio",
      "pulseaudio#microphone",
      "battery",
      "power-profiles-daemon",
      "cpu",
      "memory",
      "custom/sensorsinfo",
      "custom/swaync",
      "custom/dunst",
      "custom/power"
    ]
  },
  "group/pill-in#clipboard": {
    "orientation": "inherit",
    "modules": ["custom/clipboard"]
  }
}
